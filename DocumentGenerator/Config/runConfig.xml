<?xml version="1.0" encoding="utf-8" ?>
<config>


  <features>
    <document></document>
    <table nesting="2" ></table>
    <headings></headings>
    <tableRow></tableRow>
    <tableCell></tableCell>
    <text></text>
    <paragraph></paragraph>
    <!--<section />
    <chapter />-->
    <heading />
    <image></image>
    <!--Feature Extension-->
    <list />
    <listItem />
    <!--Feature Extension-->
    
    <!--Invalid-->   
    <!--<paradgraph />-->
    <!--Invalid-->
  </features>

  
  <constraints>
    
    <headings>
      <tableCell minCount="1" maxCount="3" />
    </headings>

    <tableRow>
      <tableCell minCount="1" maxCount="3" />
    </tableRow>

    
    <document>
      <chapter minCount="0" maxCount="4"/>
      <section minCount="0" maxCount="5"/>
      <paragraph minCount="0" maxCount="5"/>
      <text minCount="0" maxCount="0" />
      <table minCount="3" maxCount="3"/>
    </document>

    
    <chapter>
      <section minCount="1" maxCount="4"/>
    </chapter>

    <section>
      <paragraph minCount="1" maxCount="5" />
    </section>
    
    <paragraph>
      <text minCount="10" maxCount="20"/>
    </paragraph>

    <table>
      <headings minCount="1" maxCount="1"></headings>
      <tableRow minCount="3" maxCount="3" />
    </table>

    <tableCell>
      <text minCount="1" maxCount="3" />
      <table minCount="0" maxCount="1" />
      <image minCount="0" maxCount="1" />
      <paragraph minCount="0" maxCount="0" />
    </tableCell>

 
    <!--New (Adding List)-->
    <list>
      <listItem minCount="1" maxCount="8"/>
    </list>

    <document>
      <list minCount="1" maxCount="5" />
    </document>
    <!--New (Adding List)-->

  </constraints>


  <styles>
    
    <bold value="true" />
    <italic value="true" />
    <underlined value="true"/>
    <headingType />
    <horizontalAlignment value="Center" />
    

    <!--New (Adding List)-->
    <ordered value="true" />
    <label value="*" />
    <label value="+" />
    <!--New (Adding List)-->
    
  </styles>


  <specific>

    <!--Important-->
    <chapter>
      <styles>
        <title value="Title"/>
        <chapterNumber value="1"/>
      </styles>
    </chapter>

    <image>
      <styles>
        <width minValue="40" maxValue="60"/>
        <height minValue="40" maxValue="60"/>
      </styles>
    </image>
    <!--Important-->

    
    <document>
      <styles>
        <autoGenerateToc value="false"/>
      </styles>
    </document>

    <headings>
      <text>
        <styles>
          <bold value="true"></bold>
          <underlined value="true"/>
        </styles>
      </text>
    </headings>
    

  </specific>




</config>